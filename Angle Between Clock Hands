#include <stdio.h>
#include <math.h>

int main() {
    int hour, minute;
    float angle;

    printf("Enter hour (0-23): ");
    scanf("%d", &hour);

    printf("Enter minute (0-59): ");
    scanf("%d", &minute);

    hour = hour % 12;

    angle = fabs((30*hour + 0.5*minute) - (6*minute));

    if(angle > 180)
        angle = 360 - angle;

    printf("Angle = %.2f degrees\n", angle);

    return 0;
}
